import java.util.*;
class TestClass
{
    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int start=1;
        for(int i=1;i<=n;i++,System.out.print("\n"))
        {
            for(int j=1;j<=n;j++)
            {
                if(i==start || i==n || i+j==n+1)
                {
                    System.out.print("*");
                }
                else
                {
                    System.out.print(" ");
                }
            }
        }
    }
}
